<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://java.sun.com/jsf/core"      
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:c="http://java.sun.com/jsp/jstl/core">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<link href="CSS/bodyEstiloRedSemRedimensionar.css" rel="stylesheet" type="text/css">
<link href="CSS/styles.css" rel="stylesheet" type="text/css">
<link href="CSS/posicaoDoMenu.css" rel="stylesheet" type="text/css">
<title>criar nova resenha</title>
</head>
<body>
<f:view>
    <!-- aqui está o menu lateral que aparece em todas as páginas-->
    <div id='cssmenu'>
        <ul>
            <li class='active '><a href='index.html'><span>Home</span></a></li>
            <li><a href='personagens2.html'><span>Personagens</span></a></li>
            <li><a href='lerprimeiraspaginas.html'><span>Ver primeiras páginas do livro</span></a></li>
            <li><a href='pontospositivosdolivro.html'><span>Pontos positivos do livro</span></a></li>
            <li><h:form><h:commandLink action = "#{verResenhasBean.pegarTitulosNotasDeTodasAsResenhas}"><span>Resenhas</span></h:commandLink></h:form></li>
            <li><h:form><h:commandLink action="#{verForumBean.verTopicosDoForum}"><span>Fórum</span></h:commandLink></h:form></li>
            <li><a href='paginaDeAutenticacao.jsp'><span>Editar Site</span></a></li>
        </ul>
    </div>
    
    <div id="conteudopagina">
    <h1>Criar nova resenha</h1>
    <h:form id = "formularionovaresenha">
    <h:messages/>
    <table>
    <tr>
    <td style = "vertical-align:top; text-align:right;">seu nome:</td> 
    <td style = "text-align:left;"><h:inputText required="true" requiredMessage="campo obrigatório para preenchimento:seu nome" value = "#{adicionarNovaResenhaBean.autorDaResenha}"></h:inputText></td>
    </tr>
    
    <tr>
    <td style = "vertical-align:top; text-align:right;">título da resenha:</td> 
    <td style = "text-align:left;"><h:inputText required="true" requiredMessage="campo obrigatório para preenchimento:título da resenha" value = "#{adicionarNovaResenhaBean.tituloDaResenha}"></h:inputText>
    </td>
    </tr>
    
    <tr>
    <td style = "vertical-align:top; text-align:right;">nota do livro:</td>
    <td style = "text-align:left;"> 
    <h:selectOneMenu value = "#{adicionarNovaResenhaBean.notaDaResenha}">
    <f:selectItem itemLabel = "péssimo" itemValue = "pessimo"/>
    <f:selectItem itemLabel = "ruim" itemValue = "ruim"/>
    <f:selectItem itemLabel = "bom" itemValue = "bom"/>
    <f:selectItem itemLabel = "muito bom" itemValue = "muito bom"/>
    <f:selectItem itemLabel = "excelente" itemValue = "excelente"/>
    </h:selectOneMenu>
    </td>
    </tr>
    
    <tr>
    <td style = "vertical-align:top; text-align:right;"> resenha:</td>
    <td style = "text-align:left;">
    <h:inputTextarea id = "resenha" rows="20" cols="50" required="true" requiredMessage="campo obrigatório para preenchimento:resenha" value = "#{adicionarNovaResenhaBean.textoDaResenha}">
    <f:validator validatorId="validadorCampoPossuiPalavrao"/>
    </h:inputTextarea>
    </td>
    </tr>
    
    <tr>
    <td colspan = "2" style = "text-align:center">
    <h:commandButton value = "enviar resenha" action = "#{adicionarNovaResenhaBean.adicionarNovaResenha}" />
    </td>
    </tr>
    </table>
    
    
    </h:form>
    </div>
	
  </f:view>
  </body>
</html>